#define NP_PACKET_BUF_SIZE 64
#define NP_MAX_PAGE_SIZE 0x21C0 /* 8KB + 448 spare */
#define NP_WRITE_ACK_BYTES 1984
#define NP_NAND_TIMEOUT 0x1000000

#define NP_NAND_GOOD_BLOCK_MARK 0xFF

#define BOOT_CONFIG_ADDR 0x08003800
#define FLASH_START_ADDR 0x08000000
#define FLASH_SIZE 0x40000
#define FLASH_PAGE_SIZE 0x800
#define FLASH_BLOCK_SIZE 0x800

typedef enum
{
    NP_CMD_NAND_READ_ID     = 0x00,
    NP_CMD_NAND_ERASE       = 0x01,
    NP_CMD_NAND_READ        = 0x02,
    NP_CMD_NAND_WRITE_S     = 0x03,
    NP_CMD_NAND_WRITE_D     = 0x04,
    NP_CMD_NAND_WRITE_E     = 0x05,
    NP_CMD_NAND_CONF        = 0x06,
    NP_CMD_NAND_READ_BB     = 0x07,
    NP_CMD_VERSION_GET      = 0x08,
    NP_CMD_ACTIVE_IMAGE_GET = 0x09,
    NP_CMD_FW_UPDATE_S      = 0x0a,
    NP_CMD_FW_UPDATE_D      = 0x0b,
    NP_CMD_FW_UPDATE_E      = 0x0c,
    NP_CMD_NAND_LAST        = 0x0d,
} np_cmd_code_t;

enum
{
    NP_ERR_INTERNAL       = -1,
    NP_ERR_ADDR_EXCEEDED  = -100,
    NP_ERR_ADDR_INVALID   = -101,ַ
    NP_ERR_ADDR_NOT_ALIGN = -102,
    NP_ERR_NAND_WR        = -103,
    NP_ERR_NAND_RD        = -104,
    NP_ERR_NAND_ERASE     = -105,
    NP_ERR_CHIP_NOT_CONF  = -106,
    NP_ERR_CMD_DATA_SIZE  = -107,
    NP_ERR_CMD_INVALID    = -108,
    NP_ERR_BUF_OVERFLOW   = -109,
    NP_ERR_LEN_NOT_ALIGN  = -110,
    NP_ERR_LEN_EXCEEDED   = -111,
    NP_ERR_LEN_INVALID    = -112,
    NP_ERR_BBT_OVERFLOW   = -113,
};

typedef struct __attribute__((__packed__))
{
    np_cmd_code_t code;
} np_cmd_t;

typedef struct __attribute__((__packed__))
{
    uint8_t skip_bb : 1;
    uint8_t inc_spare : 1;
    uint8_t enable_hw_ecc: 1;
} np_cmd_flags_t;

typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;           // ����
    uint64_t addr;          // ��ַ
    uint64_t len;           // ����
    np_cmd_flags_t flags;   // ��־
} np_erase_cmd_t;

// �ṹ�� np_write_start_cmd_t���Խ��շ�ʽ���壬��ʾд�뿪ʼ����ṹ������һ�������ַ�����Ⱥͱ�־
typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;           // ����
    uint64_t addr;          // ��ַ
    uint64_t len;           // ����
    np_cmd_flags_t flags;   // ��־
} np_write_start_cmd_t;

typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;       // ����
    uint8_t len;        // ���ݳ���
    uint8_t data[];     // ����
} np_write_data_cmd_t;

typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;       // ����
} np_write_end_cmd_t;

typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;           // ����
    uint64_t addr;          // ��ַ
    uint64_t len;           // ����
    np_cmd_flags_t flags;   // ��־
} np_read_cmd_t;

typedef struct __attribute__((__packed__))
{
    np_cmd_t cmd;           // ����
    uint8_t hal;            // HAL �汾
    uint32_t page_size;     // ҳ��С
    uint32_t block_size;    // ���С
    uint64_t total_size;    // �ܴ�С
    uint32_t spare_size;    // ���������С
    uint8_t bb_mark_off;    // ������ƫ��
    uint8_t hal_conf[];     // HAL ����
} np_conf_cmd_t;

enum
{
    NP_RESP_DATA   = 0x00,   // ������Ӧ
    NP_RESP_STATUS = 0x01,   // ״̬��Ӧ
};

typedef struct __attribute__((__packed__))
{
    uint8_t code;           // ��Ӧ����
    uint8_t info;           // ��Ӧ��Ϣ
    uint8_t data[];         // ��Ӧ����
} np_resp_t;

enum
{
    NP_STATUS_OK        = 0x00,   // ��Ӧ״̬������
    NP_STATUS_ERROR     = 0x01,   // ��Ӧ״̬������
    NP_STATUS_BB        = 0x02,   // ��Ӧ״̬������
    NP_STATUS_WRITE_ACK = 0x03,   // ��Ӧ״̬��д��ȷ��
    NP_STATUS_BB_SKIP   = 0x04,   // ��Ӧ״̬����������
    NP_STATUS_PROGRESS  = 0x05,   // ��Ӧ״̬������
};

typedef struct __attribute__((__packed__))
{
    np_resp_t header;       // ��Ӧͷ��
    chip_id_t nand_id;      // NAND ID
} np_resp_id_t;

typedef struct __attribute__((__packed__))
{
    np_resp_t header;       // ��Ӧͷ��
    uint64_t addr;          // �����ַ
    uint32_t size;          // �����С
} np_resp_bad_block_t;

typedef struct __attribute__((__packed__))
{
    np_resp_t header;       // ��Ӧͷ��
    uint64_t bytes_ack;     // ȷ��д����ֽ���
} np_resp_write_ack_t;

typedef struct __attribute__((__packed__))
{
    np_resp_t header;       // ��Ӧͷ��
    uint8_t err_code;       // �������
} np_resp_err_t;

typedef struct __attribute__((__packed__))
{
    np_resp_t header;       // ��Ӧͷ��
    uint64_t progress;      // ����
} np_resp_progress_t;

typedef struct __attribute__((__packed__))
{
    uint8_t major;          // ���汾��
    uint8_t minor;          // �ΰ汾��
    uint16_t build;         // ������
} version_t;

typedef struct __attribute__((__packed__))
{
    np_resp_t header;           // ��Ӧͷ��
    version_t version;          // �汾��Ϣ
} np_resp_version_t;

